script#cm-searchspacial-template(type='text/x-template')
    #modalSearchSpacial.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modal config', aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5.modal-title Busqueda espacial
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') Ã—
                .modal-body
                    .form-group
                        label(style='width: 100px', for='selDep') Departamento: 
                        select.custom-select(name='', id='selDep', @change='changeDepartamentos', v-model='selDep')
                            option(value='') Seleccionar
                            option(v-for='(dep, index) in spacialStore.departamentos', :key='index', :value='dep.id') {{dep.nombdpto}}
                    .form-group
                        label(style='width: 100px', for='selProv') Provincia: 
                        select.custom-select(name='', id='selProv', @change='changeProvincias', v-model='selProv')
                            option(value='') Seleccionar
                            option(v-for='(prov, index) in spacialStore.provincias', :key='index', :value='prov.id') {{prov.nombprov}}
                    .form-group
                        label(style='width: 100px', for='selDist') Distrito: 
                        select.custom-select(name='', id='selDist', @change='changeDistritos', v-model='selDist')
                            option(value='') Seleccionar
                            option(v-for='(dist, index) in spacialStore.distritos', :key='index', :value='dist.id') {{dist.nombdist}}
                    //-.form-group
                        label(style='width: 100px', for='selProy') Proyecto: 
                        select.custom-select(name='', id='selProy', @change='changeProyectos', v-model='selProy')
                            option(value='') Seleccionar
                            option(v-for='(proy, index) in spacialStore.proyectos', :key='index', :value='proy.id') {{proy.proyecto}}
                    i.fa.fa-spinner.fa-spin.searchSpacialLoad(style="display: none")
                    .charge.searchSpacialLoad