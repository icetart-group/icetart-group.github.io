script#cm-externallayer-template(type='text/x-template')
    #modalExternalLayer.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modal config', aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5.modal-title Capas externas
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') Ã—
                .modal-body
                    .external-layers
                        ul.list-layer.list-group
                            li.list-group-item.list-capa(v-for='(grupo, index) in controlCapaStore.grupos', :key='index')
                                .list-grupo-name(data-toggle='collapse', :href="'#collapse'+grupo.id_grupo")
                                    span {{grupo.grupo}} 
                                    i.fa.fa-angle-down.m-l-5
                                .list-grupo-content.collapse(:id="'collapse'+grupo.id_grupo")
                                    ul.list-group.list-ub
                                        li.list-group-item.list-grupo-item(v-for='(capa, indexC) in controlCapaStore.capas', :key='indexC', v-if='capa.id_grupo == grupo.id_grupo')
                                            label.label-layer(:for="'layer'+capa.id_capa")
                                                input(type='checkbox', :checked='capa.checked', :id="'layer'+capa.id_capa", @change='changeLayer(capa.nomb_capa)')
                                                |  {{capa.nomb_capa}}
                                            div.options-layers
                                                div.icn.icn-svg.icn-trans(@click="OpenTrans(capa)", title="Transparencia")
                                                    //-icm-trans(:fill="capa.trans")
                                                    span T
                                                //-a.icn.icn-svg.icn-trans(title="Kml", :href="geoserver+'/wms?service=WMS&version=1.1.0&request=GetMap&layers='+workSpace+':'+capa.tabla_capa+'&srs=EPSG:4326&format=application/vnd.google-earth.kml+xml&width=330&height=768&bbox=-81.3282304899999,-18.350927736,-68.6522791029999,-0.0386059689999456'")
                                                    //-icm-trans(:fill="capa.trans")
                                                    span K
                                            br
                                            div.layer-slide(v-show="capa.trans_show")
                                                span Transparencia: 
                                                input(type="range", min="-1", max="0", step="0.05", v-model="capa.trans", @change="changeTrans(indexC, capa.trans)")
                    i.fa.fa-spinner.fa-spin.externalLayerLoad
                    .charge.externalLayerLoad